{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "outDir": "./",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "lib": [
      "es2017"
    ],
    "types": [
      "@citizenfx/server",
      "@types/node"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*",
    "../../../ts-shared/src/shared/types/*.d.ts",
    "../../../ts-shared/src/server/types/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/__tests__/*"
  ]
}
