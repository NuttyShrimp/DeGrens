{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2021",
    "allowJs": true,
    "lib": ["es2021"],
    "types": ["@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "../../../../../types", "../../../../**/types/exports.d.ts"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
