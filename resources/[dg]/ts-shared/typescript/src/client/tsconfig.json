{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "lib": ["es2017"],
    "types": ["@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*", "../shared", "../../../../../../types"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
