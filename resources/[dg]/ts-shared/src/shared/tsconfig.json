{
	"compilerOptions": {
		"outDir": "./",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es2017",
		"allowJs": true,
		"lib": [
			"es2017"
		],
		"types": [
			"@citizenfx/server",
			"@citizenfx/client",
			"@types/node"
		],
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"./**/*",
		"../types"
	],
	"exclude": [
		"**/node_modules",
		"**/__tests__/*"
	]
}
