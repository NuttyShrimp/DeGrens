{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./**/*",
    "../types",
    "../shared/**/*",
    "../../../../ts-shared/packages/shared/src/types/*.d.ts",
    "../../../../ts-shared/packages/server/src/types/*.d.ts",
    "../../../../../../types",
    "../../../../../**/types/exports.d.ts"
  ],
  "exclude": ["**/node_modules"]
}
