{
  "compilerOptions": {
    "strict": true,
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "lib": ["es2020"],
    "types": ["@citizenfx/server", "@types/node"],
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@dgx/*": ["../../../../ts-shared/typescript/src/*"]
    }
  },
  "include": [
    "./**/*",
    "../types",
    "../../../../ts-shared/typescript/src/shared/types/*.d.ts",
    "../../../../ts-shared/typescript/src/server/types/*.d.ts",
    "../config.ts"
  ],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
