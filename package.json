{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run --stream build ",
    "build:dev": "lerna run --stream build:dev ",
    "lint:lerna": "lerna run --stream lint",
    "lint:root": "eslint --fix --resolve-plugins-relative-to ./ --ext .js,.ts,.tsx,.jsx,.json ./resources/[dg]/",
    "lint": "yarn run lint:root --quiet",
    "format": "lerna run --stream format",
    "bootstrap": "lerna bootstrap",
    "postinstall": "husky install && yarn bootstrap",
    "postinstall:lerna": "lerna run --stream postinstall",
    "test": "lerna run test"
  },
  "dependencies": {
    "@citizenfx/client": "^2.0.5688-1",
    "@citizenfx/server": "^2.0.5688-1",
    "@types/node": "^18.0.1",
    "webpack-merge": "^5.8.0",
    "winston": "^3.8.1",
    "winston-sentry-log": "^1.0.26"
  },
  "devDependencies": {
    "@sentry/integrations": "^7.4.1",
    "@sentry/node": "^7.4.1",
    "@sentry/tracing": "^7.4.1",
    "@sentry/webpack-plugin": "^1.18.9",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^9.1.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.1",
    "lerna": "^5.1.6",
    "lint-staged": "^13.0.3",
    "nx": "^14.4.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,css,md,vue}": "yarn run lint:root --cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  }
}
