{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "turbo run build ",
    "build:dev": "turbo run build:dev ",
    "lint:root": "eslint --fix --resolve-plugins-relative-to ./ --ext .js,.ts,.tsx,.jsx,.json,.vue ./resources/[dg]/",
    "lint": "yarn run lint:root --quiet",
    "format": "turbo run format",
    "postinstall": "husky install && patch-package",
    "db:push": "turbo run db:push",
    "db:deploy": "turbo run db:deploy"
  },
  "dependencies": {
    "@citizenfx/client": "^2.0.6282-1",
    "@citizenfx/server": "^2.0.6282-1",
    "esbuild-loader": "^3.0.0",
    "esbuild-plugin-fileloc": "^0.0.6",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "javascript-obfuscator": "^4.0.2",
    "patch-package": "^6.5.1",
    "postinstall-postinstall": "^2.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-env": "^0.8.0",
    "webpack-merge": "^5.8.0",
    "webpack-obfuscator": "^3.5.1",
    "winston": "^3.8.2",
    "winston-sentry-log": "^1.0.26"
  },
  "devDependencies": {
    "@sentry/integrations": "^7.37.2",
    "@sentry/node": "^7.37.2",
    "@sentry/tracing": "^7.37.2",
    "@sentry/webpack-plugin": "^1.20.0",
    "@types/node": "^18.13.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "eslint-webpack-plugin": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.7.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,css,md,vue}": "eslint --fix --resolve-plugins-relative-to ./ --ext .js,.ts,.tsx,.jsx,.json,.vue ./resources/[dg]/ --cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "workspaces": [
    "resources/**",
    "packages/*"
  ],
  "prisma": {
    "seed": "ts-node -P packages/db/tsconfig.json packages/db/seed.ts"
  }
}
