{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run --stream --concurrency=10 build ",
    "build:dev": "lerna run --stream build:dev ",
    "lint:lerna": "lerna run --stream lint",
    "lint:root": "eslint --fix --resolve-plugins-relative-to ./ --ext .js,.ts,.tsx,.jsx,.json,.vue ./resources/[dg]/",
    "lint": "yarn run lint:root --quiet",
    "format": "lerna run --stream format",
    "bootstrap": "lerna bootstrap",
    "postinstall": "husky install && yarn bootstrap",
    "test": "lerna run test"
  },
  "dependencies": {
    "@citizenfx/client": "^2.0.6136-1",
    "@citizenfx/server": "^2.0.6136-1",
    "@types/node": "^18.11.16",
    "webpack-merge": "^5.8.0",
    "winston": "^3.8.2",
    "winston-sentry-log": "^1.0.26"
  },
  "devDependencies": {
    "@sentry/integrations": "^7.27.0",
    "@sentry/node": "^7.27.0",
    "@sentry/tracing": "^7.27.0",
    "@sentry/webpack-plugin": "^1.20.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-vue": "^9.8.0",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.2",
    "javascript-obfuscator": "^4.0.0",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "nx": "^15.3.3",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-obfuscator": "^3.5.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,css,md,vue}": "eslint --fix --resolve-plugins-relative-to ./ --ext .js,.ts,.tsx,.jsx,.json,.vue ./resources/[dg]/ --cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  }
}
