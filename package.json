{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run --stream build ",
    "build:dev": "lerna run --stream build:dev ",
    "lint:lerna": "lerna run --stream lint",
    "lint:root": "eslint --fix --resolve-plugins-relative-to ./ --ext .js,.ts,.tsx,.jsx,.json ./resources/[dg]/",
    "lint": "yarn run lint:root --quiet",
    "format": "lerna run --stream format",
    "bootstrap": "lerna bootstrap",
    "postinstall": "husky install && yarn bootstrap",
    "postinstall:lerna": "lerna run --stream postinstall",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "eslint-webpack-plugin": "^3.1.1",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,css,md,vue}": "yarn run lint:root --cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  }
}
