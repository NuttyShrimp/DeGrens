root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2

[{*.ats,*.ts}]
indent_size = 2
indent_style = tab
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
indent_style = tab
tab_width = 2

[{*.lua,*.lua.txt}]
indent_size = 2
indent_style = tab
tab_width = 2
